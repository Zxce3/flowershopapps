{
  "openapi": "3.0.0",
  "info": {
    "title": "API Documentation for Flower Apps",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://{environment}.flowerapp.com/api/v1",
      "description": "Local server",
      "variables": {
        "environment": {
          "default": "dev",
          "description": "Environment variable",
          "enum": [
            "dev",
            "staging",
            "production"
          ]
        }
      }
    }
  ],
  "paths": {
    "/users": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get a list of users",
        "parameters": [
          {
            "name": "token",
            "in": "header",
            "description": "Token for authentication",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "size",
            "in": "query",
            "description": "size per page",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "sort",
            "in": "query",
            "description": "Sort by column",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "order",
            "in": "query",
            "description": "Sort order",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "search",
            "in": "query",
            "description": "Search by column",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "message": "Get Users Success",
                  "data": [
                    {
                      "id": 1,
                      "email": "john.doe@example.com",
                      "password": "hashedpassword"
                    },
                    {
                      "id": 2,
                      "email": "jane.smith@example.com",
                      "password": "hashedpassword"
                    }
                  ]
                }
              }
            }
          },
          "204": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "message": "No Content",
                  "data": []
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Create a new user",
        "parameters": [
          {
            "name": "token",
            "in": "header",
            "description": "Token for authentication",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "User data",
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "biodata": {
                  "fullname": "New User",
                  "mobilePhone": "081234567890",
                  "imagePath": "/uploads/images/1234567890.jpg"
                },
                "users":{
                  "biodataId": 1,
                  "roleId": 1,
                  "email": "newuser@gmail.com",
                  "password": "newuserpassword"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "message": "Create User Success",
                  "data": {
                    "id": 3,
                    "fullname": "newuser",
                    "email": "newuser@example.com",
                    "password": "hashednewuserpassword"
                  }
                }
              }
            }
          },
          "400": {
            "description": "User creation failed",
            "content": {
              "application/json": {
                "example": {
                  "status": "failed",
                  "message": "Bad Request, email or password cannot be null",
                  "data": {}
                }
              }
            }
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get details of a specific user",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "token",
            "in": "header",
            "description": "Token for authentication",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "message": "Success Get User",
                  "data": {
                    "users": {
                      "id": 1,
                      "biodataId": 1,
                      "roleId": 1,
                      "email": "newuser@gmail.com",
                      "password": "newuserpassword",
                      "userBiodata": {
                        "id": 1,
                      "fullname": "New User",
                      "mobilePhone": "081234567890",
                      "imagePath": "/uploads/images/1234567890.jpg"
                      }
                    }
                  }
                }
              }
            }
          },
          "204": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "message": "No Content",
                  "data": {}
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Users"
        ],
        "summary": "Update details of a specific user",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "token",
            "in": "header",
            "description": "Token for authentication",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Updated user data",
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "username": "newusername",
                "email": "john.doe@example.com",
                "password": "newhashedpassword"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User updated successfully",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "message": "Update User Success",
                  "data": {
                    "id": 1,
                    "username": "newusername",
                    "email": "john.doe@example.com",
                    "password": "newhashedpassword"
                  }
                }
              }
            }
          },
          "400": {
            "description": "User updated failed",
            "content": {
              "application/json": {
                "example": {
                  "status": "failed",
                  "message": "Update User Failed",
                  "data": {}
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Users"
        ],
        "summary": "Delete a specific user",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "token",
            "in": "header",
            "description": "Token for authentication",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "User deleted successfully",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "message": "Delete User Success",
                  "data": {}
                }
              }
            }
          },
          "404": {
            "description": "User deleted failed",
            "content": {
              "application/json": {
                "example": {
                  "status": "failed",
                  "message": "User Was Not Found, Delete User Failed",
                  "data": {}
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "User login",
        "requestBody": {
          "description": "User login data",
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "username": "ahmadzulfadli",
                "password": "strongpassword123"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "message": "Login successful",
                  "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9"
                }
              }
            }
          },
          "400": {
            "description": "Login failed",
            "content": {
              "application/json": {
                "example": {
                  "status": "failed",
                  "message": "Login failed. username or password cannot be null.",
                  "token": ""
                }
              }
            }
          },
          "401": {
            "description": "Login failed",
            "content": {
              "application/json": {
                "example": {
                  "status": "failed",
                  "message": "Login failed. Please check your username and password.",
                  "token": ""
                }
              }
            }
          }
        }
      }
    },
    "/logout": {
      "post": {
        "tags": [
          "Auth"
        ],
        "parameters": [
          {
            "name": "token",
            "in": "header",
            "description": "Token for authentication",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "summary": "User logout",
        "responses": {
          "200": {
            "description": "Logout successful",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "message": "Logout successful",
                  "token": ""
                }
              }
            }
          },
          "403": {
            "description": "Logout failed",
            "content": {
              "application/json": {
                "example": {
                  "status": "failed",
                  "message": "Logout failed. User not authenticated.",
                  "token": ""
                }
              }
            }
          }
        }
      }
    },
